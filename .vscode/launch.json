{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--timeout",
          "10000",
          "tests/**/*.test.js"
        ],
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
  }